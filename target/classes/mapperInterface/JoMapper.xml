<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="mapperInterface.JoMapper">
  	
  	
  	<!-- Join 기능 추가 : 조장 이름 출력하기 -->
  	 <select id="selectList" resultType="vo.JoVO">
 		select j.jno, j.chief, j.jname, j.note, m.name
 		from memjo as j, member as m
 		where j.chief = m.id
 		order by jno
 	</select>
 
 	<select id="selectOne" resultType="vo.JoVO">
 		select * from memjo where jno = #{jno}
 	</select>
 	
  	<insert id="jinsert">
 		insert into memjo (jno,chief,jname,note) 
 		values(#{jno},#{chief},#{jname},#{note})
 	</insert>
 
 	<update id="jupdate">
 		update memjo set chief = #{chief}, jname = #{jname}, note = #{note}
 		where jno = #{jno}
 	</update>
  	
 	<delete id="jdelete">
 		delete from memjo where jno = #{jno}
 	</delete>
  </mapper>